// Comprehensive test program for Simple language parser
// This program exercises all grammatical concepts

public class TestProgram {
    // Field declarations with different types
    static int globalCounter;
    static boolean isActive;
    static String message;
    
    // Function with no parameters and void return
    static void initializeGlobals() {
        globalCounter = 0;
        isActive = true;
    }
    
    // Function with parameters and int return
    static int add(int a, int b) {
        return (a + b);
    }
    
    // Function with multiple parameters
    static int calculate(int x, int y, int z) {
        int result;
        result = (x + y) * z;
        return result;
    }
    
    // Function demonstrating all arithmetic operators
    static int arithmeticTest(int a, int b) {
        int sum;
        int diff;
        int product;
        int quotient;
        int remainder;
        int power;
        
        sum = a + b;
        diff = a - b;
        product = a * b;
        quotient = a / b;
        remainder = a % b;
        power = a ** b;
        
        return sum;
    }
    
    // Function demonstrating boolean operators
    static boolean logicTest(boolean x, boolean y) {
        boolean andResult;
        boolean orResult;
        boolean notResult;
        
        andResult = x && y;
        orResult = x || y;
        notResult = !x;
        
        return andResult;
    }
    
    // Function demonstrating comparison operators
    static boolean comparisonTest(int a, int b) {
        boolean eq;
        boolean neq;
        boolean lt;
        boolean gt;
        boolean lte;
        boolean gte;
        
        eq = a == b;
        neq = a != b;
        lt = a < b;
        gt = a > b;
        lte = a <= b;
        gte = a >= b;
        
        return eq;
    }
    
    // Function with if statement (no else)
    static void simpleIf(int x) {
        if (x > 0) {
            print(x);
        }
    }
    
    // Function with if-else statement
    static void ifElse(int x) {
        if (x > 0) {
            print(x);
        } else {
            print(-x);
        }
    }
    
    // Function with nested if statements
    static void nestedIf(int x, int y) {
        if (x > 0) {
            if (y > 0) {
                print(x + y);
            } else {
                print(x);
            }
        } else {
            print(y);
        }
    }
    
    // Function with while loop
    static void whileLoop(int n) {
        int i;
        i = 0;
        while (i < n) {
            print(i);
            i = i + 1;
        }
    }
    
    // Function with do-while loop
    static void doWhileLoop(int n) {
        int i;
        i = 0;
        do {
            print(i);
            i = i + 1;
        } while (i < n);
    }
    
    // Function with switch statement
    static void switchTest(int x) {
        switch (x) {
            case 1:
                print(1);
            case 2:
                print(2);
            case 3:
                print(3);
            default:
                print(0);
        }
    }
    
    // Function with block statement
    static void blockTest(int x) {
        {
            int localVar;
            localVar = x * 2;
            print(localVar);
        }
    }
    
    // Function with function calls
    static int functionCallTest(int a, int b) {
        int result;
        result = add(a, b);
        return result;
    }
    
    // Function with void call statement
    static void voidCallTest() {
        initializeGlobals();
        simpleIf(5);
        whileLoop(3);
    }
    
    // Function with read expression
    static int readTest() {
        int userInput;
        userInput = read();
        return userInput;
    }
    
    // Function with print statement
    static void printTest() {
        print(42);
        print(true);
        print(false);
    }
    
    // Function with return statement (no value)
    static void earlyReturn(int x) {
        if (x < 0) {
            return;
        }
        print(x);
    }
    
    // Function with complex expressions
    static int complexExpression(int a, int b, int c) {
        int result;
        result = (a + b) * c - (a / b) ** 2 ** 3 + a % b;
        return result;
    }
    
    // Function with unary minus
    static int unaryMinusTest(int x) {
        int negated;
        negated = -x;
        return negated;
    }
    
    // Function with parenthesized expressions
    static int parenTest(int a, int b, int c) {
        return ((a + b) * (c - a)) / (b + 1);
    }
    
    // Function with boolean literals
    static boolean booleanLiterals() {
        boolean t;
        boolean f;
        t = true;
        f = false;
        return t && !f;
    }
    
    // Function with assignment in expression context
    static int assignmentExpression(int x) {
        int a;
        int b;
        b = (a = x + 1) + 2;
        return b;
    }
    
    // Main function with multiple statements
    static void main() {
        int x;
        int y;
        int z;
        boolean flag;
        
        x = 10;
        y = 20;
        z = add(x, y);
        
        print(z);
        
        flag = z > 25;
        if (flag) {
            print(100);
        }
        
        whileLoop(5);
        doWhileLoop(3);
        
        switchTest(2);
        
        print(999);
    }
}