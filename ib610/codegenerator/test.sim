public class TestOutput {
    
    // Globale Variablen müssen 'static' sein
    static int globalVal;
    static boolean debug;

    // Methoden müssen 'public static' sein
    public static int add(int a, int b) {
        return a + b;
    }

    public static boolean check(int val) {
        if (val > 0) {
            return true;
        } else {
            return false;
        }
    }

    // Main Methode
    public static void main() {
        // Lokale Variablen (innerhalb von Methoden) haben KEINE Modifier
        int localVal;
        boolean res;
        int limit; 

        print(" START TEST ");

        // 1. Initialisierung
        globalVal = 5;
        localVal = 10;
        
        print("Init Global (Erwarte 5):");
        print(globalVal);
        print("Init Local (Erwarte 10):");
        print(localVal);
        
        // 2. Arithmetik
        globalVal = globalVal * localVal + 2; 
        print("Rechenergebnis (Erwarte 52):");
        print(globalVal);

        // 3. Methodenaufruf
        localVal = add(globalVal, 5);
        print("Methodenaufruf add(52, 5) (Erwarte 57):");
        print(localVal);
        
        // 4. Logik
        res = check(localVal);
        print("Check > 0 (Erwarte true):");
        print(res);

        print("If-Else Test:");
        if (res) {
            print("-> True-Zweig genommen (Richtig)");
        } else {
            print("-> False-Zweig genommen (Falsch)");
        }

        // 5. While-Schleife
        print("Countdown (57 bis 55):");
        limit = 54;
        
        while (localVal > limit) {
            print(localVal);
            localVal = localVal - 1;
        }
        
        print(" END TEST ");
    }
}